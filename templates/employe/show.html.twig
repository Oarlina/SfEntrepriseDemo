{% extends 'base.html.twig' %}

{% block title %}Détail employé{% endblock %}

{% block body %}
    <h1>Détail de l'employé </h1>
    <h2> {{employe}} </h2>
    <p> 
        <b>Prénom, nom :</b> {{employe }} 
        <br>
        {# si l'employe na pas donner sa date de naissance alors on ne peut pas avoir son age non plus #}
        <b>Date de naissance :</b> {% if employe.dateNaissance %}
                                        {{employe.dateNaissance | date ("d/m/Y") }} 
                                        <br>
                                        <b>Age :</b> {{employe.age}} ans
                                    {% else %}
                                        Non renseignée
                                        <br>
                                        <b>Age : </b> Non renseigné
                                    {% endif %} 
        <br>
        <b>Ville :</b> {{employe.ville }}                 
        <br>
        <b>Date d'embauche : </b> {{employe.dateEmbauche | date ("d/m/Y") }} 
        <br>
        <b>Entreprise : </b> <a href=" {{ path('show_entreprise', {'id': employe.entreprise.id}) }} "> {{ employe.entreprise}} </a>
    </p>
    

{% endblock %}