{% extends 'base.html.twig' %}

{% block title %}Détail entreprise{% endblock %}

{% block body %}
    <h1>Détail de l'employe </h1>
    <h2> {{employe}} </h2>
    <p> 
        <b>Prénom, nom :</b> {{employe }} 
        <br>
        <b>Age :</b> {{employe.age}} ans
        <br>
        <b>Ville :</b>  {% if employe.ville %}
                            {{employe.ville }}
                        {% else %}
                            Non renseignée
                        {% endif %} 
        <br>
        <b>Date de naissance :</b> {{employe.dateNaissance | date ("d/m/Y") }} 
        <br>
        <b>Date d'embauche : </b> {{employe.dateEmbauche | date ("d/m/Y") }} 
        <br>
        <b>Entreprise : </b> <a href=" {{ path('show_entreprise', {'id': employe.entreprise.id}) }} "> {{ employe.entreprise}} </a>
    </p>
    

{% endblock %}