{% extends 'base.html.twig' %}

{% block title %}Détail entreprise{% endblock %}

{% block body %}
    <h1>Détail de l'entreprise </h1>
    <h2> {{entreprise}} </h2>
    <p> 
        <b>Adresse :</b> {{entreprise.adresseComplete }} <br>
        <b>Date de création : </b> {{entreprise.dateCreationFr}} 
    </p>
    <h3>Liste des salariés</h3>
    <p>
        {% if entreprise.employes | length >0 %}
            {% for employe in entreprise.employes %}
            <a href="{{ path('show_employe', {'id':employe.id}) }}"> {{employe}} </a> <br>
            {% endfor %}
        {% else %}
            Il n'y a pas de salariés dans cette entreprise
        {% endif %}
    </p>
    

{% endblock %}