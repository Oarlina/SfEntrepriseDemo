{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>
    <a href="{{ path('new_entreprise') }}">Ajouter une entreprise</a> 
    <br>
    <table class="table table-striped">
        <tbody>
            {# ceci est une boucle foreach  (for row in array) #}
            {% for entreprise in entreprises %}
            <tr><th>
                {# on fait l'affichage de la raison sociale de l'entreprise #}
                <a href="{{ path('show_entreprise', {'id':entreprise.id}) }}">{{entreprise.raisonSociale }}</a><br> 
            </th></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
