{% extends 'base.html.twig' %}

{% block title %}Ajouter une entreprise{% endblock %}

{% block body %}
    <h1>Ajouter une entreprise</h1>

    {# on commence le formulaire pour le mettre dans le style que l'on souhaite  #}
    {{ form_start(formAddEntreprise) }} 
        {# on fait une ligne avec la raison sociale et l'addresse compl√®te #} 
        {{ form_row(formAddEntreprise.raisonSociale)}}
        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddEntreprise.adresse)}}
            </div>
            <div class="col-sm">
                {{ form_row(formAddEntreprise.ville)}}
            </div>
            <div class="col-sm">
                {{ form_row(formAddEntreprise.cp)}}
            </div>
        </div>
        {{ form_row(formAddEntreprise.dateCreation)}}
        </div>
    {# on fini le formulaire  #}
    {{ form_end(formAddEntreprise) }}
{% endblock %}
